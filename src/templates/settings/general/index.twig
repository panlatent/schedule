{% extends "schedule/_layouts/settings" %}

{% set fullPageForm = true %}
{% set settings = craft.schedule.settings %}

{% import "_includes/forms" as forms %}

{% block content %}
    <h2>{{ "General Settings"|t('schedule') }}</h2>

    <form method="post" accept-charset="UTF-8">
        <input type="hidden" name="action" value="schedule/settings/save-general">
        {{ csrfInput() }}

        {{ forms.textField({
            label: "Custom Name"|t('schedule'),
            id: "customName",
            name: "customName",
            value: settings.customName,
            errors: settings.getErrors('customName'),
        }) }}

        {{ forms.textField({
            label: "Custom Cp Nav Name"|t('schedule'),
            id: "customCpNavName",
            name: "customCpNavName",
            value: settings.customCpNavName,
            errors: settings.getErrors('customCpNavName'),
        }) }}

        {{ forms.autoSuggestField({
            label: "CLI Path"|t('schedule'),
            id: "cliPath",
            name: "cliPath",
            value: settings.cliPath,
            errors: settings.getErrors('cliPath'),
            suggestEnvVars: true,
        }) }}

        {{ forms.lightswitchField({
            label: "Disable all notifications"|t('schedule'),
            id: "disableNotifications",
            name: "disableNotifications",
            on: settings.disableNotifications,
        }) }}

        <button class="btn submit">{{ "Save"|t('app') }}</button>
    </form>
{% endblock %}